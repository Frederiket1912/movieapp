<h1>New Movie</h1>

<%= form_with(url: search_path, method: 'get', local: true) do |form|%>
  <%= form.label :title, 'Search for a movie '%>
    <%= form.text_field :title, placeholder: 'Eg. Titanic'%>
    <%= form.submit 'Search'%>
<% end %>
<% if flash[:alert] %>
    <%= flash[:alert] %>
<% end %>
<br>
<%= link_to "Back to index", root_path %>


